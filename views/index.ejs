<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Production Dashboard</title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/plan.css">
</head>
<body>
    <nav class="navbar">
        <div class="nav-brand">Production Dashboard</div>
        <div class="nav-tabs">
            <button class="nav-tab active" onclick="showTab('production')">Production</button>
            <button class="nav-tab" onclick="showTab('plan')">Plan Management</button>
            <button class="btn-secondary" onclick="refreshCacheData()" id="refresh-btn" title="Update data from database">üîÑ Refresh Data</button>
            <button class="btn-secondary" onclick="window.open('http://10.247.199.210:3001/', '_blank')" style="margin-left: auto;">Ki·ªÉm tra h√†ng Combi</button>
        </div>
    </nav>

    <main id="production-tab">
        <section class="card">
            <div class="card-header">
                <h2>Production Report</h2>
                <button class="btn-primary" onclick="requestPassword(() => openModal('filterModal'))">Filters</button>
            </div>
        </section>

        <section class="stats-grid" id="stats-container">
            <div class="stat-card">
                <div class="stat-label">Total Plan</div>
                <div class="stat-value" id="sum-plan">0</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">Total Actual</div>
                <div class="stat-value" id="sum-act">0</div>
            </div>
            <div class="stat-card stat-highlight">
                <div class="stat-label">Achievement</div>
                <div class="stat-value" id="sum-percent">0%</div>
            </div>
        </section>

        <section class="card">
            <div class="card-header">
                <h2>Production Data</h2>
                                                        <div class="card-actions">
                                                            <button class="btn-primary" onclick="captureScreenshot()">Screenshot</button>
                                                            <button class="btn-secondary" onclick="exportToExcel()">Export CSV</button>
                                                            <button class="btn-danger" onclick="requestPassword(clearAllComments)">Clear Comments</button>
                                                        </div>            </div>
            <div class="card-body">
                <div class="table-container">
                    <table class="data-table">
                        <thead id="data-table-header"></thead>
                        <tbody id="data-table-body"><tr><td>Loading...</td></tr></tbody>
                    </table>
                </div>
            </div>
        </section>
    </main>

    <main id="plan-tab" style="display:none">
        <section class="card">
            <div class="card-header">
                <h2>Plan Management</h2>
                <div class="card-actions">
                    <button class="btn-primary" onclick="openPlanImportModal()">Import Plan</button>
                    <button class="btn-secondary" onclick="openWorkDaysPasteModal()">Work Days</button>
                    <button class="btn-secondary" onclick="openHolidaysModal()">Holidays</button>
                    <button class="btn-danger" onclick="clearAllPlan()">Clear All</button>
                </div>
            </div>
            <div class="card-body">
                <div class="table-container">
                    <table class="data-table">
                        <thead id="plan-table-header"></thead>
                        <tbody id="plan-table-body"><tr><td>Loading...</td></tr></tbody>
                    </table>
                </div>
            </div>
        </section>
    </main>

    <div id="commentModal" class="modal">
        <div class="modal-content">
            <h3>Edit Comment</h3>
            <input type="hidden" id="modal-item-code">
            <input type="hidden" id="modal-year-month">
            <textarea id="modal-comment-text" rows="4"></textarea>
            <div class="modal-actions">
                <button class="btn-primary" onclick="submitComment()">Save</button>
                <button class="btn-secondary" onclick="closeModal('commentModal')">Cancel</button>
            </div>
        </div>
    </div>

    <div id="estQtyModal" class="modal">
        <div class="modal-content">
            <h3>Edit Estimated Quantity</h3>
            <input type="hidden" id="modal-est-item-code">
            <input type="hidden" id="modal-est-year-month">
            <input type="number" id="modal-est-qty" step="0.01">
            <div class="modal-actions">
                <button class="btn-primary" onclick="submitEstQty()">Save</button>
                <button class="btn-secondary" onclick="closeModal('estQtyModal')">Cancel</button>
            </div>
        </div>
    </div>

    <div id="planImportModal" class="modal">
        <div class="modal-content modal-large">
            <h3>Import Plan Data</h3>
            <textarea id="plan-paste-data" rows="10" placeholder="Paste Excel data here..." onpaste="setTimeout(previewPastedData, 100)"></textarea>
            <div id="preview-container" class="preview-box"></div>
            <div class="modal-actions">
                <button id="import-plan-btn" class="btn-primary" onclick="submitPlanImport()" disabled>Import</button>
                <button class="btn-secondary" onclick="closeModal('planImportModal')">Cancel</button>
            </div>
        </div>
    </div>

    <div id="editPlanQtyModal" class="modal">
        <div class="modal-content">
            <h3>Edit Plan Quantity</h3>
            <input type="hidden" id="edit-item-code">
            <input type="hidden" id="edit-month">
            <input type="number" id="edit-plan-qty" step="0.0001">
            <div class="modal-actions">
                <button class="btn-primary" onclick="savePlanQty()">Save</button>
                <button class="btn-secondary" onclick="closeModal('editPlanQtyModal')">Cancel</button>
            </div>
        </div>
    </div>

    <div id="editWorkDayModal" class="modal">
        <div class="modal-content">
            <h3>Edit Work Days</h3>
            <input type="hidden" id="edit-work-month">
            <input type="number" id="edit-work-days" min="0" max="31">
            <div class="modal-actions">
                <button class="btn-primary" onclick="saveWorkDay()">Save</button>
                <button class="btn-secondary" onclick="closeModal('editWorkDayModal')">Cancel</button>
            </div>
        </div>
    </div>

    <div id="pasteWorkDaysModal" class="modal">
        <div class="modal-content">
            <h3>Paste Work Days</h3>
            <textarea id="workdays-paste-data" rows="5" placeholder="Paste work days data..."></textarea>
            <div id="workdays-preview" class="preview-box"></div>
            <div class="modal-actions">
                <button id="import-workdays-btn" class="btn-primary" onclick="importWorkDays()" disabled>Import</button>
                <button class="btn-secondary" onclick="closeModal('pasteWorkDaysModal')">Cancel</button>
            </div>
        </div>
    </div>

    <div id="holidaysModal" class="modal">
        <div class="modal-content modal-large">
            <h3>Holiday Calendar</h3>
            <input type="month" id="calendar-month" onchange="renderCalendar()">
            <div id="holiday-calendar"></div>
            <div class="modal-actions">
                <button class="btn-secondary" onclick="closeModal('holidaysModal')">Close</button>
            </div>
        </div>
    </div>

    <div id="filterModal" class="modal">
        <div class="modal-content">
            <h3>Filters</h3>
            <div style="display: flex; flex-direction: column; gap: 1rem;">
                <div class="filter-group">
                    <label>Fiscal Year</label>
                    <select id="fiscalYearFilter">
                        <option value="2023">FY2023 (Apr 2023 - Mar 2024)</option>
                        <option value="2024">FY2024 (Apr 2024 - Mar 2025)</option>
                        <option value="2025" selected>FY2025 (Apr 2025 - Mar 2026)</option>
                        <option value="2026">FY2026 (Apr 2026 - Mar 2027)</option>
                    </select>
                </div>
                <div class="filter-group">
                    <label>Month</label>
                    <input type="month" id="monthFilter" value="<%= year %>-<%= month.toString().padStart(2, '0') %>">
                </div>
                <div class="filter-group">
                    <label>Lines (Hold Ctrl/Cmd and click to select multiple)</label>
                    <select id="lineFilter" multiple size="6">
                        <option value="111">111</option>
                        <option value="121">121</option>
                        <option value="313" selected>313 - Sewing</option>
                        <option value="312" selected>312 - Forming</option>
                        <option value="315">315</option>
                        <option value="161">161</option>
                    </select>
                </div>
                <div class="filter-group">
                    <label>Date Range (Optional)</label>
                    <div style="display: flex; gap: 0.5rem; align-items: center;">
                        <input type="date" id="startDate" style="flex: 1;">
                        <span>to</span>
                        <input type="date" id="endDate" style="flex: 1;">
                    </div>
                </div>
                <div class="filter-group">
                    <label>Up to Date (Optional)</label>
                    <div style="display: flex; gap: 0.5rem; align-items: center;">
                        <input type="date" id="upToDate" style="flex: 1;">
                        <button class="btn-secondary" onclick="document.getElementById('upToDate').value=''; applyFilters();" style="padding: 0.625rem;">Clear</button>
                    </div>
                </div>
            </div>
            <div class="modal-actions">
                <button class="btn-primary" onclick="applyFilters()">Apply</button>
                <button class="btn-secondary" onclick="closeModal('filterModal')">Cancel</button>
            </div>
        </div>
    </div>

    <!-- System Login Modal (Mandatory) -->
    <div id="systemLoginModal" class="modal" style="background: rgba(0,0,0,0.95); z-index: 9999;">
        <div class="modal-content" style="border: 2px solid #ef4444; box-shadow: 0 0 20px rgba(239, 68, 68, 0.5);">
            <h3 style="color: #ef4444;">‚ö†Ô∏è SYSTEM LOCKED</h3>
            <p>Verification required (7-day Security Check).</p>
            <p style="font-size: 0.9em; color: #64748b;">Incorrect password will terminate the session.</p>
            <input type="password" id="sysPasswordInput" placeholder="Enter System Password" style="width: 100%; padding: 12px; margin: 15px 0; border: 1px solid #ddd; border-radius: 4px; font-size: 16px;">
            <div class="modal-actions" style="justify-content: center;">
                <button class="btn-primary" onclick="performSystemLogin()" style="background: #ef4444; width: 100%;">AUTHENTICATE</button>
            </div>
        </div>
    </div>

    <!-- Password Modal for Protected Features -->
    <div id="passwordModal" class="modal">
        <div class="modal-content">
            <h3>üîê Enter Password</h3>
            <p>This feature requires a password.</p>
            <input type="password" id="passwordInput" placeholder="Enter password" style="width: 100%; padding: 10px; margin: 10px 0; border: 1px solid #ddd; border-radius: 4px;">
            <div class="modal-actions">
                <button class="btn-primary" onclick="verifyPassword()">Verify</button>
                <button class="btn-secondary" onclick="closeModal('passwordModal')">Cancel</button>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
    <script src="/js/app.js"></script>
</body>
</html>

